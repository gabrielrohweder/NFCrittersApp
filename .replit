modules = ["nodejs-20", "web", "postgresql-16", "dotnet-8"]
run = "cd Server && dotnet run"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8"]

[deployment]
deploymentTarget = "autoscale"
build = ["sh", "-c", "cd Client && dotnet publish -c Release -o ../Server/wwwroot && cd ../Server && dotnet publish -c Release -o ../output"]
run = ["sh", "-c", "cd output && dotnet AnimalCollector.Server.dll"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 35889
externalPort = 3001

[env]
PORT = "5000"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Server && dotnet run"
waitForPort = 5000

[agent]
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_database:1.0.0"]
