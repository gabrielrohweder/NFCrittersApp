@page "/"
@inject NavigationManager NavigationManager

<PageTitle>Yume Zoo - Collect NFC Critters</PageTitle>

<div class="page-container home-page">
    <div class="home-hero">
        <h1 class="hero-title" data-testid="text-hero-title">Welcome to Yume Zoo!</h1>
        <p class="hero-subtitle" data-testid="text-hero-subtitle">
            Discover and collect amazing 3D printed animals with NFC technology
        </p>
        
        <div class="hero-image-container">
            <img src="images/yume_book.png" class="hero-image" alt="Explorer"/>
        </div>

    </div>

    <div class="features-section">
        <h2 class="section-title">How It Works</h2>
        
        <div class="features-grid">
            <div class="feature-card" data-testid="card-feature-scan">
                <div class="feature-icon">üì±</div>
                <h3>Scan NFC Tags</h3>
                <p>Hold your phone near any NFC-enabled animal figure to discover it</p>
            </div>

            <div class="feature-card" data-testid="card-feature-collect">
                <div class="feature-icon">ü¶Å</div>
                <h3>Build Your Collection</h3>
                <p>Collect animals from around the world and track your progress</p>
            </div>

            <div class="feature-card" data-testid="card-feature-learn">
                <div class="feature-icon">üìö</div>
                <h3>Learn Fun Facts</h3>
                <p>Discover interesting facts about each animal you collect</p>
            </div>

            <div class="feature-card" data-testid="card-feature-achieve">
                <div class="feature-icon">üèÜ</div>
                <h3>Unlock Achievements</h3>
                <p>Complete your collection and earn special achievements</p>
            </div>
        </div>
    </div>
</div>

<style>
.home-page {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.home-hero {
    text-align: center;
    padding: 40px 20px;
}

.hero-title {
    font-family: var(--font-display);
    font-size: 48px;
    font-weight: 700;
    margin-bottom: 16px;
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 50%, rgba(245, 158, 11, 0.8) 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hero-subtitle {
    font-size: 20px;
    color: var(--muted-foreground);
    margin-bottom: 32px;
    line-height: 1.6;
}

.hero-image-container {
    margin: 32px 0;
    display: flex;
    justify-content: center;
}

.hero-image {
    max-width: 600px;
    width: 100%;
    height: auto;
    object-fit: contain;
    filter: drop-shadow(0 8px 16px rgba(124, 58, 237, 0.2));
}

.home-actions {
    margin-top: 32px;
}

.btn-primary {
    background: var(--primary);
    color: white;
    border: none;
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
    transition: all 0.2s;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(124, 58, 237, 0.4);
}

.btn-primary:active {
    transform: translateY(0);
}

.features-section {
    margin-top: 60px;
    padding: 40px 20px;
}

.section-title {
    font-family: var(--font-display);
    font-size: 32px;
    font-weight: 700;
    color: var(--foreground);
    text-align: center;
    margin-bottom: 32px;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
}

.feature-card {
    background: white;
    border-radius: 16px;
    padding: 32px 24px;
    text-align: center;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
}

.feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.feature-icon {
    font-size: 48px;
    margin-bottom: 16px;
}

.feature-card h3 {
    font-family: var(--font-display);
    font-size: 20px;
    font-weight: 700;
    color: var(--foreground);
    margin-bottom: 12px;
}

.feature-card p {
    font-size: 16px;
    color: var(--muted-foreground);
    line-height: 1.5;
}

@@media (max-width: 768px) {
    .hero-title {
        font-size: 36px;
    }

    .hero-subtitle {
        font-size: 18px;
    }

    .features-grid {
        grid-template-columns: 1fr;
    }
}
</style>

@code {
    private void NavigateToScan()
    {
        NavigationManager.NavigateTo("/scan");
    }
}
